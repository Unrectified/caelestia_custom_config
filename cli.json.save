{
    "record": {
        "extraArgs": []
    },
    "wallpaper": {
        "postHook": "echo $WALLPAPER_PATH"  
    },
    "theme": {
        "enableTerm": true,
        "enableHypr": true,
        "enableDiscord": true,
        "enableSpicetify": true,
        "enableFuzzel": true,
        "enableBtop": true,
        "enableGtk": true,
        "enableQt": true
    },
    "toggles": {
        "communication": {
            "equibop": {
                "enable": true,
                "match": [{ "class": "equibop"}],
                "command": ["equibop","--wayland", "--disable-gpu"],
                "move": true
            },
            "whatsapp": {
                "enable": false,
                "match": [{ "class": "whatsapp"}],
                "move": true
            }
        },
        "music": {
            "deezer-desktop": {
                "enable": true,
                "match": [{ "class": "deezer-desktop" }],
                "command": ["deezer-desktop", "--wayland", "--disable-gpu"],
                "move": true
            }
        },
        "sysmon": {
            "btop": {
                "enable": true,
                "match": [{ "class": "btop", "title": "btop", "workspace": { "name": "special:sysmon" } }],
                "command": ["foot", "-a", "btop", "-T", "btop", "fish", "-C", "exec btop"]
            }
        },
        "todo": {
            "obsidian": {
                "enable": true,
                "match": [{ "class": "obsidian" }],
                "command": ["xdg-open", "obsidian://open?vault=Test_Obsidian&file=TO DO.md"],
                "move": true
            }
        },
        "beeper": {
            "BeeperTexts": {
                "enable": true,
                "match": [{ "class": "BeeperTexts" }],
                "command": ["beeper", "--disable-gpu", "--no-sandbox", "--wayland"],
                "move": true
            }
        },
        "controlcenter": {
            "controlcenter": {
                "enable": true,
                "match": [{"initialTitle": "Caelestia Settings - Network"}],
                "command": ["caelestia", "shell", "controlCenter", "open"],
                "move": true
            }
        }
    }
}
