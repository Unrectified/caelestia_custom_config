{
    "record": {
        "extraArgs": []
    },
    "wallpaper": {
        "_postHook": "echo $WALLPAPER_PATH",
        "postHook": "echo $WALLPAPER_PATH && /usr/local/bin/caelestia_custom_scripts wallpaper \"$WALLPAPER_PATH\" ",
        "_postHook": "swww img \"$WALLPAPER_PATH\" --transition-type grow --transition-duration 2 --transition-fps 60 --transition-pos $(hyprctl cursorpos | tr -d ' ') --invert-y"
    },
    "theme": {
        "enableTerm": true,
        "enableHypr": true,
        "enableDiscord": true,
        "enableSpicetify": true,
        "enableFuzzel": true,
        "enableBtop": true,
        "enableGtk": true,
        "enableQt": true
    },
    "toggles": {
        "communication": {
            "equibop": {
                "enable": true,
                "match": [{ "class": "equibop"}],
                "command": ["equibop","--wayland", "--disable-gpu"],
                "move": true
            },
            "whatsapp": {
                "enable": false,
                "match": [{ "class": "whatsapp"}],
                "move": true
            }
        },
        "music": {
            "deezer": {
                "enable": true,
                "match": [{ "class": "deezer-desktop" }],
                "command": ["deezer-desktop", "--wayland", "--disable-gpu"],
                "move": true
            }
        },
        "sysmon": {
            "btop": {
                "enable": true,
                "match": [{ "class": "btop", "title": "btop", "workspace": { "name": "special:sysmon" } }],
                "command": ["footclient", "-a", "btop", "-T", "btop", "fish", "-C", "exec btop"]
            }
        },
        "todo": {
            "obsidian": {
                "enable": true,
                "match": [{ "class": "obsidian" }],
                "command": ["/usr/bin/obsidian"],
                "move": true
            }
        },
        "beeper": {
            "BeeperTexts": {
                "enable": true,
                "match": [{ "class": "BeeperTexts" }],
                "command": ["beeper", "--disable-gpu", "--no-sandbox", "--wayland"],
                "move": true
            }
        },
        "controlcenter": {
            "Caelestia Settings - Network": {
                "enable": true,
                "match": [{"initialTitle": "Caelestia Settings - Network"}],
                "command": ["caelestia", "shell", "controlCenter", "open"],
                "move": true
            }
        }
    }
}
